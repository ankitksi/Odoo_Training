<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="SaleOrderModalTemplate">
        <div class="modal fade show" tabindex="-1" role="dialog" aria-hidden="true" style="display: block;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Sale Order Details</h5>
                        <button type="button" class="close close-modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <!-- Add content for the modal -->
                        <p>Sale order details go here.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary close-modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </template>
</odoo>
