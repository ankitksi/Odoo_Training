<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_exam_wizard" model="ir.ui.view">
        <field name="name">exam.wizard.form</field>
        <field name="model">training.exam.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Exams">
                <footer>
                    <button string="Create" type="object" name="create_exams" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_exam_wizard" model="ir.actions.act_window">
        <field name="name">Exam Wizard</field>
        <field name="res_model">training.exam.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
