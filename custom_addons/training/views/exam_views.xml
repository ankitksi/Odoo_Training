<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_exam_form" model="ir.ui.view">
        <field name="name">exam.form</field>
        <field name="model">training.exam</field>
        <field name="arch" type="xml">
            <form string="Exam">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="subject_id"/>
                        <field name="marks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_exam_tree" model="ir.ui.view">
        <field name="name">exam.tree</field>
        <field name="model">training.exam</field>
        <field name="arch" type="xml">
            <tree string="Exams">
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="marks"/>
            </tree>
        </field>
    </record>

    <record id="action_exam" model="ir.actions.act_window">
        <field name="name">Exams</field>
        <field name="res_model">training.exam</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
